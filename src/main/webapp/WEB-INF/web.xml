<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">

	<servlet>
		<servlet-name>quizServlet</servlet-name>
		<servlet-class>no.steria.quizzical.QuizServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>quizServlet</servlet-name>
		<url-pattern>/retrieveQuiz/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>quizServlet</servlet-name>
		<url-pattern>/submitQuiz/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>adminServlet</servlet-name>
		<servlet-class>no.steria.quizzical.AdminServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>adminServlet</servlet-name>
		<url-pattern>/adminQuiz/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>no.steria.quizzical.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
</web-app>
